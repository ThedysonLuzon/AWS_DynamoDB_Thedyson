<Window x:Class="_301127562_Luzon_Lab2.PdfViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_301127562_Luzon_Lab2"
        xmlns:syncfusion="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF"
        mc:Ignorable="d"
        
        Title="Book Reader" Height="450" Width="800">

    <Grid x:Name="HomeGrid">
        <syncfusion:PdfViewerControl x:Name="pdfViewer" ItemSource="{Binding DocumentStream}" />
        <Button x:Name="Btn_Bookmark" Content="Bookmark" HorizontalAlignment="Left" Margin="51,10,0,0" VerticalAlignment="Top" Click="Btn_Bookmark_Click"/>

    </Grid>
</Window>
